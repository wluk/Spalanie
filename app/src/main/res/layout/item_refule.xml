<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_gravity="center"
              android:orientation="vertical"
              tools:context=".LinearLayout"
              android:weightSum="1">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14"
        android:orientation="horizontal"
        android:paddingTop="20px">

        <LinearLayout
            android:layout_width="@dimen/refuel_width"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconTank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="3pt"
                android:paddingRight="1pt"/>

            <TextView
                android:id="@+id/RefuelId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#id"
                />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:paddingRight="5pt">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3.29"
                    android:text="@string/date_refueling"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/RefuleDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="01-01-2017"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.41"
                    android:text="@string/liters"
                    android:textAlignment="viewStart"/>

                <TextView
                    android:id="@+id/RefuleLiters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.26"
                    android:text="45"
                    android:textAlignment="textEnd"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:text="@string/app_name"
                    android:textAlignment="viewStart"/>

                <TextView
                    android:id="@+id/RefuleCombustion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:text="7.5"
                    android:textAlignment="textEnd"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>